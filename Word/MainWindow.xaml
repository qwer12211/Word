<Window x:Class="Word.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Word"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Open_Word" Content="Открыть Word документ"  Grid.Row="2" Height="32" VerticalAlignment="Top" Click="Open_Word_Click"/>
        <Button x:Name="Create_Word" Content="Создать Word документ"  Grid.Row="1" Height="32" VerticalAlignment="Top" Click="Create_Word_Click"/>
        <TextBlock TextWrapping="Wrap" Text="Добро пожаловать в почтовый редактор текста!"  TextAlignment="Center" FontSize="14"/>

    </Grid>
</Window>
